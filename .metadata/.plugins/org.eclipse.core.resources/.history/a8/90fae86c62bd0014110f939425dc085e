import java.io.*;
import java.net.Socket;
import java.net.SocketException;
import java.util.ArrayList;
import java.util.List;

public class Client {
	private Socket socket = null;
	private ObjectInputStream inputStream = null;
	private ObjectOutputStream outputStream = null;
	private boolean isConnected = false;

	public Client() {

	}

	public void communicate() {

		while (!isConnected) {
			try {
				socket = new Socket("localHost", 4445);
				System.out.println("Connected");
				isConnected = true;

				inputStream = new ObjectInputStream(new BufferedInputStream(
						socket.getInputStream()));
				String st = (String) inputStream.readObject();

			} catch (SocketException se) {
				se.printStackTrace();
				System.exit(0);
			} catch (IOException e) {
				e.printStackTrace();
			} catch (ClassNotFoundException cn) {
				cn.printStackTrace();
			}
		}
	}

	public void send() {
		try {
			outputStream = new ObjectOutputStream(new BufferedOutputStream(
					socket.getOutputStream()));

			String string = new String("123456");
			System.out.println("Object to be written at client = " + string);
			outputStream.writeObject(string);

			outputStream.flush();
		} catch (SocketException se) {
			se.printStackTrace();
			System.exit(0);
		} catch (IOException e) {
			e.printStackTrace();
		}

	}

	public void receive() {
		try {
			inputStream = new ObjectInputStream(new BufferedInputStream(
					socket.getInputStream()));
			String st = (String) inputStream.readObject();
			System.out.println("Object received = " + st);

			switch (st) {
			case ("server : 123456"):
				System.out.println("correct");
				break;
			case ("123"):
				System.out.println("wrong");
				break;
			}
		} catch (SocketException se) {
			System.exit(0);
		} catch (IOException e) {
			e.printStackTrace();
		} catch (ClassNotFoundException cn) {
			cn.printStackTrace();
		}
	}

	public static void main(String[] args) {
		Client client = new Client();
		client.communicate();
		client.receive();
		client.send();
		
	}
}
